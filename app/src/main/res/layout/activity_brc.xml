<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Brc"
    android:background="@color/color4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="315dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="355dp"
            android:background="@color/color8"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="84dp"
                android:layout_height="57dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/commu_logo" />

            <ImageView
                android:layout_width="113dp"
                android:layout_height="84dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:src="@drawable/britishredcross" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="British Red Cross"
                android:textColor="#ff212121"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="0">

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="The British Red Cross helps people in crisis, responding to disasters, conflicts and individual emergencies here in the UK and across the world. We enable vulnerable people to prepare for and respond to emergencies in their own communities. And when the crisis is over, we help people to recover and move on with their lives.
"
                    android:textColor="#ff212121"
                    android:textSize="14dp" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="46dp"
            android:src="@drawable/emailcontactus" />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="contactus@redcross.org.uk"
            android:textColor="#ff212121">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="46dp"
            android:src="@drawable/phonecontactus" />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="0344 871 11 11"
            android:textColor="#ff212121">
        </TextView>
    </LinearLayout>



    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btndonate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3B595EE7"
        android:textColor="#ff212121"
        android:onClick="donate"
        android:text="Donate"/>



    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btnvolunteer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3B595EE7"
        android:textColor="#ff212121"
        android:onClick="volunteer"
        android:text="volunteer"
        />

</LinearLayout>